#!/usr/bin/env bash
# Install and configure HAProxy on a new ubuntu machine

frontend frontweb
    bind *:80
    bind *:443 ssl crt /etc/haproxys.pem
    mode http
    timeout client 60s
    default_backend backweb

backend backweb
    timeout connect 10s
    timeout server 10s
    mode http
    balance roundrobin
    server web-01 54.145.240.142:80 check
    server web-02 100.26.238.188:80 check
    option http-server-close
    option forwardfor
    http-request add-header X-Served-By %[src]
